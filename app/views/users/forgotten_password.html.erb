<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h3>Reset another User's password</h3>
      <div class="card">
        <div class="card-header">
          Reset Password
        </div>
        <div class="card-body">
          <%= form_for :user, url: forgotten_password_users_path, method: :post, html: { class: 'form' } do %>
            <div class="form-group">
              <%= label_tag :email, "User's Email" %>
              <%= text_field_tag :email, nil, class: 'form-control' %>
            </div>
            <div class="form-group mt-2">
              <%= label_tag :new_password, "New Password" %>
              <%= password_field_tag :new_password, nil, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= submit_tag "Submit", class: 'btn btn-primary mt-2' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- List of all users for testing -->
  
</div>
