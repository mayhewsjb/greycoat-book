<div class="container mt-5">
  <div class="row">
    <div class="col-12">

      <h2 class="mb-4">Item Details</h2>

      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= @todo.title %></h5>
          <p class="card-text"><%= @todo.description %></p>
          <p><strong>Priority:</strong> <%= ['Not Urgent', 'Quite Urgent', 'Very Urgent'][@todo.priority - 1] %></p>
          <p><strong>Added by:</strong> <%= "Sam" %>, <%= @todo.created_at.strftime("%e %B %Y") %></p>
        </div>
      </div>

      <div class="together">
        <%= link_to 'Back to To-do List', todos_path, class: 'btn btn-primary' %>
        <% if @todo.user == current_user %>
          <%= link_to 'Edit', edit_todo_path(@todo), class: 'btn btn-secondary' %>
          <%= button_to 'Delete', todo_path(@todo), method: :delete, data: { confirm: 'Are you sure you want to delete this To-do?' }, class: 'btn btn-danger', form: { class: 'd-inline' } %>
        <% end %>
      </div>

    </div>
  </div>
</div>
