<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <%= form_for @todo, html: { class: 'mt-4' } do |f| %>

        <div class="mb-3">
          <%= f.label :title, class: 'form-label' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :description, class: 'form-label' %>
          <%= f.text_area :description, rows: 5, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :priority, class: 'form-label' %>
          <%= f.select :priority, [['Not Urgent', 1], ['Quite Urgent', 2], ['Very Urgent', 3]], {}, class: 'form-select' %>
        </div>

        <div class="mb-3">
          <%= f.submit "Update Item", class: 'btn btn-primary me-2' %>
          <%= link_to 'Cancel', todo_path(@todo), class: 'btn btn-secondary' %>
        </div>

      <% end %>

    </div>
  </div>
</div>
