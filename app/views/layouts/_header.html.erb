<% if user_signed_in? %>
  <nav class="navbar navbar-light bg-light py-3">
      <div class="d-flex w-100 justify-content-between">
          <!-- Logo -->
          <a class="navbar-brand mx-5" href="/">MayhewFlat</a>

          <!-- Hamburger Menu -->
          <button class="navbar-toggler mx-5" id="hamburger" type="button">
              <span class="navbar-toggler-icon"></span>
          </button>

          <!-- Navigation Links -->
          <ul class="navbar-nav" id="nav-links">
              <li class="nav-item me-4">
                  <a class="nav-link" href="/stays">All Stays</a>
              </li>
              <li class="nav-item me-4">
                  <a class="nav-link" href="/stays/my_stays">My Stays</a>
              </li>
              <li class="nav-item me-4">
                  <a class="nav-link" href="/todos">To-Do List</a>
              </li>
              <li class="nav-item me-4">
                  <a class="nav-link" href="/info">Helpful Info</a>
              </li>
              <!-- Add other links as you need -->

              <!-- Logout Link -->
              <li class="nav-item me-4">
                  <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
          </ul>
      </div>
  </nav>

  <script>
  document.getElementById("hamburger").addEventListener("click", toggleNavLinks);

  // Toggle function
  function toggleNavLinks() {
      var navLinks = document.getElementById("nav-links");
      if (navLinks.style.display === "none" || navLinks.style.display === "") {
          navLinks.style.display = "flex";
      } else {
          navLinks.style.display = "none";
      }
  }

  // Check display on window resize
  window.addEventListener("resize", function() {
      var navLinks = document.getElementById("nav-links");
      if (window.innerWidth >= 768) { // corresponds to your media query breakpoint
          navLinks.style.display = "flex"; // always show on desktop
      } else {
          navLinks.style.display = "none"; // hide on mobile when resizing
      }
  });

  </script>
<% else %>
  <!-- Header for non-logged in users -->
  <div class="text-center pt-4">
    <h1>MayhewFlat</h1>
  </div>
<% end %>
