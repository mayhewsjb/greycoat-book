<% if @stay.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @stay.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4">New Stay</h2>

      <%= form_tag available_rooms_stays_path, method: :get do %>
        <div class="form-group">
          <%= label_tag :start_date, 'Start Date:', class: 'form-label' %>
          <%= date_field_tag :start_date, nil, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= label_tag :end_date, 'End Date:', class: 'form-label' %>
          <%= date_field_tag :end_date, nil, class: 'form-control' %>
        </div>

        <div class="form-group mt-4 d-flex justify-content-begin">
          <%= submit_tag "Next", class: 'btn btn-primary me-2' %>
          <%= link_to 'Cancel', :back, class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
